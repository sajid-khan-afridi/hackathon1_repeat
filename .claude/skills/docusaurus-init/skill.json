{
  "name": "docusaurus-init",
  "version": "1.0.0",
  "description": "Initialize a Docusaurus v3 project with TypeScript, MDX support, and custom theming",
  "author": "Claude Code",
  "license": "MIT",
  "main": "index.js",
  "type": "infrastructure",
  "keywords": ["docusaurus", "documentation", "typescript", "mdx"],
  "parameters": {
    "project_name": {
      "type": "string",
      "required": true,
      "description": "Name of the Docusaurus project directory"
    },
    "title": {
      "type": "string",
      "required": true,
      "description": "Title of the documentation site"
    },
    "description": {
      "type": "string",
      "required": true,
      "description": "Description of the documentation site"
    },
    "github_org": {
      "type": "string",
      "required": false,
      "description": "GitHub organization or username for deployment"
    }
  },
  "outputs": {
    "project_path": {
      "type": "string",
      "description": "Path to the created Docusaurus project"
    },
    "config_file": {
      "type": "string",
      "description": "Path to docusaurus.config.ts"
    },
    "package_json": {
      "type": "string",
      "description": "Path to package.json with dependencies"
    }
  },
  "dependencies": [
    "@docusaurus/core",
    "@docusaurus/preset-classic",
    "@docusaurus/module-type-aliases",
    "@docusaurus/tsconfig",
    "react",
    "react-dom"
  ],
  "tags": ["docusaurus", "documentation", "typescript", "mdx", "infrastructure"]
}